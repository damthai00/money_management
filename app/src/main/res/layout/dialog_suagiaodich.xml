<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView

            android:text="Số tiền "
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_dialog_suagiaodich_sotien"
            android:enabled="false"
            android:inputType="number"
            android:maxLength="10"
            android:text="10000"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <TextView
            android:textSize="10dp"
            android:text="VNĐ"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Nhóm "
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_dialog_suagiaodich_nhom"
            android:textColor="@color/color_ten_nhom"
            android:enabled="false"
            android:text="Lương"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <Button
            android:id="@+id/bnt_dialog_suagiaodich_chonnhom"
            android:textSize="10dp"
            android:text="Chọn nhóm"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Ghi chú "
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_dialog_suagiaodich_ghichu"
            android:enabled="false"
            android:lines="2"
            android:maxLines="2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Ngày "
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edt_dialog_suagiaodich_ngay"
            android:textColor="@color/color_ten_nhom"
            android:enabled="false"
            android:text="ngày"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <Button
            android:id="@+id/bnt_dialog_suagiaodich_chongnay"
            android:textSize="10dp"
            android:text="Chọn ngày"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Loại "
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
       <RadioGroup
           android:layout_width="240dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <RadioButton
               android:id="@+id/rbnt_dialog_suagiaodich_thunhap"
                android:enabled="false"
               android:textColorHighlight="@color/color_thu_nhap"
               android:text="Thu nhập"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>
           <RadioButton
               android:id="@+id/rbnt_dialog_suagiaodich_chitieu"
                android:enabled="false"
               android:textSelectHandle="@color/color_chi_tieu"
               android:text="Chi tiêu"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_weight="1"/>
       </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bnt_dialog_suagiaodich_sua"
            android:text="Sửa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bnt_dialog_suagiaodich_xoa"
            android:text="Xóa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/bnt_dialog_suagiaodich_xacnhan"
            android:text="Xác nhận"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</LinearLayout>