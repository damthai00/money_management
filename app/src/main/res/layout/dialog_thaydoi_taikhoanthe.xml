<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tài khoản thẻ: " />
        <EditText
            android:id="@+id/edt_chinhly_dialog_hientai_taikhoanthe"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:enabled="false"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Thay đổi: " />
        <EditText
            android:id="@+id/edt_chinhly_dialog_thaydoi_taikhoanthe"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:ems="10"
            android:inputType="number"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/bnt_chinhly_dialog_taikhoanthe_xacnhan"
            android:text="Xác nhận"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bnt_chinhly_dialog_taikhoanthe_huy"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>