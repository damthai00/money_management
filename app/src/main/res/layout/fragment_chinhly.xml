<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_chinhly">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SỐ DƯ"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TK Thẻ"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/edt_chinhly_taikhoanthe"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="1000000000"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="35dp"
                android:inputType="number"
                android:enabled="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VNĐ"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/bnt_chinhly_thaydoi_tkt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thay đổi"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền mặt: "
                android:textSize="15dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:id="@+id/edt_chinhly_tienmat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="1000000000"
                android:gravity="right"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:enabled="false"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VNĐ"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/bnt_chinhly_thaydoi_tm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thay đổi"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tổng thực: "
            android:layout_marginLeft="20dp"
            android:textSize="25dp"/>
        <EditText
            android:id="@+id/edt_chinhly_tong"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="10000000"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:enabled="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="15dp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:textSize="25dp"
            android:text="Quản lý nhóm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ListView
            android:id="@+id/lv_chinhly_danhsachnhom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>


        </LinearLayout>



    </LinearLayout>

</LinearLayout>