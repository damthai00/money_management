<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/txt_danhsach_giaodich_ngaythang"
        android:text="20/11/2018"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/color_ngay_thang"
        android:textSize="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_danhsach_giaoidich_tennhom"
            android:textColor="@color/color_ten_nhom"
            android:textSize="18dp"
            android:text="Ăn uống"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textSize="16dp"
            android:id="@+id/txt_danhsach_giaoidich_sotien"
            android:text="111111111"
            android:textColor="@color/color_chi_tieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"/>
        <TextView
            android:textSize="12dp"
            android:text="VNĐ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_danhsach_giaoidich_ghichu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_den"
        android:textSize="12dp"/>

</LinearLayout>