<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_chuyendoi">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỐ DƯ"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/txt_chuyendoi_taikhoanthe"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TK Thẻ"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_taikhoanthe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:enabled="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tiền mặt: "
            android:textSize="15dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_tienmat"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:enabled="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình thức: "
            android:textSize="20dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbnt_chuyendoi_ruttien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rút tiền"
                android:layout_marginLeft="20dp"/>/>

            <RadioButton
                android:id="@+id/rbnt_chuyendoi_chuyentien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển tiền"
                android:layout_marginLeft="20dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền: "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_sotien"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:ems="10"
            android:inputType="number"
            android:maxLength="9" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phí: "
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_phi"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:gravity="right"
            android:ems="10"
            android:inputType="number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="12dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="left"
            android:layout_marginLeft="30dp">
            <RadioButton
                android:id="@+id/rbnt_chuyendoi_tienmat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền mặt" />
            <RadioButton
                android:id="@+id/rbnt_chuyendoi_taikhoanthe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TK Thẻ" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/bnt_chuyendoi_xacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Nhận" />
    </LinearLayout>

</LinearLayout>