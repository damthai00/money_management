<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_chuyendoi">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SỐ DƯ"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/txt_chuyendoi_taikhoanthe"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="TK Thẻ"
            android:textSize="12dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_taikhoanthe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:enabled="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tiền mặt: "
            android:textSize="12dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_tienmat"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:enabled="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Hình thức: "
            android:textSize="15dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rbnt_chuyendoi_ruttien"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Rút tiền"
                android:textSize="12dp"/>

            <RadioButton
                android:id="@+id/rbnt_chuyendoi_chuyentien"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Chuyển tiền"
                android:textSize="12dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Số tiền: "
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_sotien"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:ems="10"
            android:inputType="number"
            android:maxLength="15" />
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Phí: "
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_phi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"

            android:gravity="right"
            android:ems="10"
            android:maxLength="9"
            android:inputType="number"/>
        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="VNĐ"
            android:textSize="12dp"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">
            <RadioButton
                android:id="@+id/rbnt_chuyendoi_tienmat"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Tiền mặt"
                android:checked="true"
                android:textSize="12dp"/>
            <RadioButton
                android:id="@+id/rbnt_chuyendoi_taikhoanthe"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="TK Thẻ"
                android:checked="true"
                android:textSize="12dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Ghi chú: "
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_ghichu"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Ngày: "
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/edt_chuyendoi_ngaychuyendoi"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:enabled="false"/>
        <Button
            android:id="@+id/bnt_chuyendoi_chonngay"
            android:text="Chọn ngày"
            android:textSize="12dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Lịch sử chuyển đổi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/color_item"/>
        <Button
            android:id="@+id/bnt_chuyendoi_xacnhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Nhận"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_danhsach_chuyendoi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

        </ListView>
    </LinearLayout>

</LinearLayout>